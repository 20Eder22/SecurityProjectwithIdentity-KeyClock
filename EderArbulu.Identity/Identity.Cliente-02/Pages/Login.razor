@page "/login"

@using Services

@inject TokenService TokenService
@inject CustomAuthStateProvider CustomAuthStateProvider
@inject NavigationManager Nav

<style>
    .divider {
        display: flex;
        align-items: center;
        text-align: center;
    }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #ccc;
        }

        .divider:not(:empty)::before {
            margin-right: .75em;
        }

        .divider:not(:empty)::after {
            margin-left: .75em;
        }

        .divider span {
            color: #666;
            font-weight: 500;
        }
</style>

<div class="login-container">
    <div class="login-card shadow-lg">

        <div class="login-image d-none d-md-block">
        </div>

        <div class="login-form">
            <h2 class="title mb-3">Bienvenido</h2>
            <p class="subtitle mb-4">Ingrese sus credenciales para continuar</p>

            <div class="mb-3">
                <label>Usuario</label>
                <input class="form-control" @bind="_email" />
            </div>

            <div class="mb-3">
                <label>Contraseña</label>
                <input class="form-control" type="password" @bind="_password" />
            </div>

            <button class="btn btn-primary w-100 mt-3" @onclick="OnLogin">Ingresar</button>

            @if (!string.IsNullOrEmpty(_error))
            {
                <div class="alert alert-danger mt-3">@_error</div>
            }
            
            <div class="divider my-4">
                <span>o</span>
            </div>

            <button class="btn btn-dark w-100 mt-3"
                    @onclick="LoginGitHub">
                <i class="fab fa-github"></i> Ingresar con GitHub
            </button>
            
            <button class="btn btn-danger w-100 mt-3" 
                    @onclick="LoginGoogle">
                <i class="fab fa-google"></i> Ingresar con Google
            </button>
        </div>
    </div>
</div>

@code {
    private string _email = "";
    private string _password = "";
    private string _error = "";

    private async Task OnLogin()
    {
        _error = "";

        var tokenResponse = await TokenService.LoginAsync(_email, _password);

        if (tokenResponse == null)
        {
            _error = "Credenciales inválidas";
            return;
        }

        await CustomAuthStateProvider.SetTokenAsync(tokenResponse.access_token);
        
        Nav.NavigateTo("/");
    }

    private void LoginGitHub()
    {
        var returnUrl = Uri.EscapeDataString("/");
        Nav.NavigateTo($"https://localhost:7074/external/login/github?returnUrl={returnUrl}", true);
    }

    private void LoginGoogle()
    {
        var returnUrl = Uri.EscapeDataString("/");
        Nav.NavigateTo($"https://localhost:7074/external/login/google?returnUrl={returnUrl}", true);
    }
}

